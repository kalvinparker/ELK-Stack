# Example .env for local development
# Copy this file to .env and update values before running docker-compose

# Project namespace
COMPOSE_PROJECT_NAME=es

# Password for the 'elastic' user (change this)
ELASTIC_PASSWORD=CHANGEME_ELASTIC_PASSWORD

# Password for the 'kibana_system' user (change this)
KIBANA_PASSWORD=CHANGEME_KIBANA_PASSWORD

# Version of Elastic products
STACK_VERSION=8.10.1

# Set the cluster name
CLUSTER_NAME=docker-cluster

# License (basic/trial)
LICENSE=basic

# Ports
ES_PORT=9200
KIBANA_PORT=5601
FLEET_PORT=8220
APMSERVER_PORT=8200

# APM secret token
ELASTIC_APM_SECRET_TOKEN=CHANGEME_APM_TOKEN

# Memory defaults for local/dev
ES_MEM_LIMIT=1g
KB_MEM_LIMIT=512m
LS_MEM_LIMIT=512m

# SAMPLE Predefined Key only to be used in POC environments
# Generate a new, secure key. The recommended method is to use a cryptographic tool. In your terminal, run: openssl rand -hex 32
# This will output a 64-character hexadecimal string. Copy this entire string.
ENCRYPTION_KEY=changeme_encryption_key

# Image digest pins (copy the full image@sha256:... string from production)
ES_IMAGE=docker.elastic.co/elasticsearch/elasticsearch@sha256:REPLACE_ME
KIBANA_IMAGE=docker.elastic.co/kibana/kibana@sha256:REPLACE_ME
METRICBEAT_IMAGE=docker.elastic.co/beats/metricbeat@sha256:REPLACE_ME
FILEBEAT_IMAGE=docker.elastic.co/beats/filebeat@sha256:REPLACE_ME
LOGSTASH_IMAGE=docker.elastic.co/logstash/logstash@sha256:REPLACE_ME
ELASTIC_AGENT_IMAGE=docker.elastic.co/beats/elastic-agent@sha256:REPLACE_ME
